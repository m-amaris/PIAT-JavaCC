{
    "java.jdt.ls.vmargs": "-XX:+UseParallelGC -XX:GCTimeRatio=4 -XX:AdaptiveSizePolicyWeight=90 -Dsun.zip.disableMemoryMapping=true -Xmx8G -Xms100m -Xlog:disable",
    "saveAndRunReg": {
        "commands": [
            {
                "match": ".jj$",
                "cmd": "cd ${fileDirname}&& javacc -output_directory:\"${workspaceFolder}/src/piat/javacc\" ${fileBasename}",
                // "cmd": "cd ${fileDirname}&& javacc ${fileBasename}",
                "useShortcut": false,
                "silent": false
            },
            // {
            //     "match": ".*",
            //     "cmd": "echo 'I am a .txt file ${relativeFile}.'",
            //     "useShortcut": false,
            //     "silent": false
            // }
        ]
    },
    "files.watcherExclude": {
        "**/target": true
    }
}