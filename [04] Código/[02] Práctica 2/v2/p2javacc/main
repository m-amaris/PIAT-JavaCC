package piat.javacc;

import java.io.FileReader;

public class Main {
    /** Main entry point. */
    public static void main(String args[]) {
        final EstUsuario eu = new EstUsuario();
        final EstGenerales eg = new EstGenerales();
        final EstAgregadasTipoFecha ea = new EstAgregadasTipoFecha();
        final long tiempoComienzo = System.currentTimeMillis();

        System.out.println("Reading from file...");
        try {
            Parser t = new Parser(new ParserTokenManager(new SimpleCharStream(new FileReader(args[0]))));
            t.Start(eu, eg, ea);
            // System.out.println("\n" + "\u001B[32m" + "File Proccessed withoud errors!" + "\u001B[0m");
        } catch (Exception e) {
            // System.out.println("Oops.");
            System.out.println("\u001B[31m" + e.getMessage() + "\u001B[0m");
            // e.printStackTrace();
        }
        // System.out.println();
        // eg.mostrar();
        // System.out.println();
        // eu.mostrar(2);
        // System.out.println();
        // ea.mostrar();
        final long tiempoFinal = System.currentTimeMillis();
        final long tiempoTranscurrido = (long) ((tiempoFinal - tiempoComienzo) / 1000);
        System.out.println("\nTiempo de ejecuci√≥n: " + tiempoTranscurrido + " segundos");
    }
}
